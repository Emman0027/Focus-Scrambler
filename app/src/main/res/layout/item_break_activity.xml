<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/break_activity_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/break_activity_card_bg_1"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_break_activity_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="Go outside and take 10 deep breaths" />

        <ImageView
            android:id="@+id/btn_delete_break_activity"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/red_circle_delete_bg"
            android:padding="6dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="Delete Activity"
            android:tint="@android:color/white" />
    </LinearLayout>

</androidx.cardview.widget.CardView>