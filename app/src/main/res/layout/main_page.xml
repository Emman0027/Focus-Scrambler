<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="378dp"
        android:layout_height="676dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="27dp">

        <ImageView
            android:id="@+id/green_bg"
            android:layout_width="323dp"
            android:layout_height="191dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="389dp"
            android:src="@drawable/rounded_panel_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="80dp"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="152dp" />

        <TextView
            android:id="@+id/lbl_time_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME STATUS"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="106dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="323dp"
            android:layout_height="119dp"
            android:src="@drawable/rectangle_blue_panel_bg"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="326dp" />

        <TextView
            android:id="@+id/lbl_brk_act"
            android:layout_width="231dp"
            android:layout_height="58dp"
            android:text="BREAK ACTIVITY"
            android:textAlignment="center"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="373dp" />

        <TextView
            android:id="@+id/lbl_brk_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Break Activity Message"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="346dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>