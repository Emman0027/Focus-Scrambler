<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_page">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="321dp"
        android:layout_height="443dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="248dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_blue_panel" />

    <TextView
        android:id="@+id/lbl_welcome_text"
        android:layout_width="223dp"
        android:layout_height="29dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="94dp"
        android:text="Welcome Back! Please sign in."
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/lbl_account"
        android:layout_width="117dp"
        android:layout_height="11dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="628dp"
        android:gravity="end"
        android:text="Donâ€™t have an account?"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/lbl_welcome_text2"
        android:layout_width="42dp"
        android:layout_height="20dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="592dp"
        android:text="or"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="280dp"
        android:layout_height="49dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="288dp"
        android:hint="Email"
        android:padding="12dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txt_pass"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="352dp"
        android:hint="Password"
        android:padding="12dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/chk_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="408dp"
        android:text="Show Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="133dp"
        android:layout_height="41dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="472dp"
        android:background="#afebf6"
        android:text="Sign In"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_frgt_pass"
        android:layout_width="143dp"
        android:layout_height="17dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="536dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:text="Forgot Password"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="78dp"
        android:layout_height="11dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="628dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:gravity="start"
        android:text="Sign Up"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="277dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="600dp"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>