<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="DuplicateDefinition">

    <style name="Theme.FocusScrambler" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Add your custom color mappings here as discussed before -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/dark_grey</item>

        <item name="android:colorBackground">@color/page_background_light</item>
        <item name="colorError">@color/red_error</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Toolbar styling -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Toolbar.Primary" parent="">
        <item name="android:textColorPrimary">@color/white</item>
    </style>


</resources>